@model TodosModel


@{
    ViewData["Title"] = "Delete Todo";
}

<form class="row" method="post" asp-controller="Todos" asp-action="DeleteTodo">
    <input asp-for="Id" hidden/>
    <div class="col-6 mx-auto">
<div class="card">
    <div class="card-header">
        <h2>Delete Todo</h2>
    </div>
   <div class="card-body">
       <div class="p-4">

           <div class="form-group mb-4">
               <label for="exampleInputEmail1">Title</label>
               <input type="text" asp-for=title class="form-control" id="exampleInputEmail1" disabled aria-describedby="emailHelp" placeholder="Enter Title">
              
           </div>
           <div class="form-group mb-4">
               <label for="exampleInputPassword1">Description</label>
               <input asp-for=description type="text" class="form-control" disabled id="exampleInputPassword1" placeholder="Enter Task Description">
           </div>
           <button type="submit" class="btn btn-danger">Delete</button>
       </div>
        
        
        </div>
    </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


