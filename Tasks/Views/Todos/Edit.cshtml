@model TodosModel


@{
    ViewData["Title"] = "Edit Todo";
}

<form class="row" method="post">
    <div class="col-6 mx-auto">
<div class="card">
    <div class="card-header">
        <h2>Edit Todos</h2>
    </div>
   <div class="card-body">
       <div class="p-4">

           <div class="form-group mb-4">
               <label for="title">Title</label>
               <input type="text" asp-for=title class="form-control" id="title" aria-describedby="emailHelp" placeholder="Enter Title">
               <span id="emailHelp" asp-validation-for="title" class="form-text text-danger"></span>
           </div>
           <div class="form-group mb-4">
               <label for="description">Description</label>
               <input asp-for=description type="text" class="form-control" id="description" placeholder="Enter Task Description">
               <span id="emailHelp" class="form-text text-danger" asp-validation-for="description"></span>
           </div>
           <button type="submit" class="btn btn-primary">Update</button>
       </div>
        </div>
    </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


