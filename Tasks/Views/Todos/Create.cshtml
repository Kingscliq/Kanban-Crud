@model TodosModel


@{
    ViewData["Title"] = "Create Todos";
}

<partial name="_Notifications" />

<form class="row mt-5" method="post" asp-controller="Todos" asp-action="CreateTodo">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>Create Todos</h2>
            </div>
            <div class="card-body m-5">
                <div class="p-4">
                    <div class="form-group mb-4">
                        <label for="exampleInputEmail1">Title</label>
                        <input type="text" asp-for=title class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
                        <span id="emailHelp" asp-validation-for="title" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label for="exampleInputPassword1">Description</label>
                        <input asp-for=description type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter Task Description">
                        <span id="emailHelp" class="form-text text-danger" asp-validation-for="description"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


